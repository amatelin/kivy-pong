#:kivy 1.8.0

<Snake>
    head: snake_head
    tail: snake_tail

    SnakeHead:
        id: snake_head
        width: root.width
        height: root.height

    SnakeTail:
        id: snake_tail
        width: root.width
        height: root.height

<SnakeGame>:
    snake: snake_object
    fruit: fruit_object

    Label:
        font_size: 70
        center_x: root.width/4
        top: root.top - 50
        text: str(root.score)

    Snake:
        id: snake_object
        width: root.width/root.col_number
        height: root.height/root.row_number

    Fruit:
        id: fruit_object
        width: root.width/root.col_number
        height: root.height/root.row_number
