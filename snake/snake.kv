#:kivy 1.8.0
<SnakeHead>
    canvas:
        Triangle:
            points: self.points

<SnakeGame>:
    snake: snake_head

    Label:
        font_size: 70
        center_x: root.width/4
        top: root.top - 50
        text: "0"

    SnakeHead:
        id: snake_head
        width: root.width/20
        height: root.height/10


