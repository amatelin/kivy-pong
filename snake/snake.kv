#:kivy 1.8.0

<Snake>
    head: snake_head
    tail: snake_tail

    SnakeHead:
        id: snake_head
        width: root.width
        height: root.height

    SnakeTail:
        id: snake_tail
        width: root.width
        height: root.height

<SnakeGame>:
    snake: snake_object
    fruit: fruit_object

    Label:
        font_size: 70
        center_x: root.x + root.width/root.col_number*2
        top: root.top - root.height/root.row_number
        text: str(root.score)

    Snake:
        id: snake_object
        width: root.width/root.col_number
        height: root.height/root.row_number

    Fruit:
        id: fruit_object
        width: root.width/root.col_number
        height: root.height/root.row_number


<MainMenuScreen>:
    AnchorLayout:
        Label: 
            anchor_x: root.center
            text: "Ouroboros"

        Button:
            size_hint: (.5, .5)
            text: 'Goto settings'
            on_press: root.manager.current = 'game_screen'


<GameScreen>:
    game_widget: game_widget_instance

    SnakeGame:
        id: game_widget_instance
