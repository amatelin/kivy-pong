#:kivy 1.8.0
<SnakeHead>
    canvas:
        Triangle:
            points: (self.x, self.y, self.x-self.width, self.y+self.height/2, self.x-self.width, self.y-self.height/2)

<SnakeGame>:
    snake: snake_head

    Label:
        font_size: 70
        center_x: root.width/4
        top: root.top - 50
        text: "0"

    SnakeHead:
        id: snake_head
        width: root.width/20
        height: root.height/10
        x: root.center_x
        y: root.center_y
        velocity: self.width


